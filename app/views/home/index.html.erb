<div class="container-fluid ">
  <div class="row">
  <div class="col-sm">
    <div class="circular--portrait">
  <%= image_tag @user.avatar.url(:medium), :class => "imgs" %>
  </div>
</div>
</div>
<div class="row">
  <div class="card" style="width: 18rem;">
      <div class="card-header ">
        <h2><%= current_user.username %></h2>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><p><%= current_user.first_name + " " + current_user.last_name %></p></li>
      </ul>
    </div>
  </div>
</div>
